<div class="auth-container">
  <div class="auth-header">
    <h1>DailyFlow</h1>
    <p>Bem-vindo ao site</p>
  </div>

  <%= form_with url: login_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, placeholder: "seu@email.com", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, placeholder: "••••••••", required: true %>
    </div>

    <%= f.submit "Entrar", class: "btn-auth" %>
  <% end %>

  <div class="auth-footer">
    Ainda não tem conta? <%= link_to "Cadastre-se", new_user_path %>
  </div>
</div>