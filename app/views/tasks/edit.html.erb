<div class="auth-container">
  <div class="auth-header">
    <h1>Editar Tarefa</h1>
    <p>Ajuste os detalhes da sua tarefa.</p>
  </div>

  <%= form_with model: @task, local: true do |f| %>
    <div class="form-group">
      <%= f.label :titulo, "Título" %>
      <%= f.text_field :titulo, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :descricao, "Descrição" %>
      <%= f.text_area :descricao, rows: 3 %>
    </div>

    <div class="form-group">
      <%= f.label :category_id, "Categoria" %>
      <%= f.collection_select :category_id, @categories, :id, :nome, { prompt: "Selecione uma categoria" } %>
    </div>

    <div class="form-group">
      <%= f.label :prioridade %>
      <%= f.select :prioridade, [["Baixa", 1], ["Média", 2], ["Alta", 3]] %>
    </div>

    <div class="form-group" style="display: flex; align-items: center; gap: 10px; margin-top: 1rem;">
      <%= f.check_box :concluida %>
      <%= f.label :concluida, "Marcar como concluída" %>
    </div>

    <%= f.submit "Atualizar Tarefa", class: "btn-auth" %>
    
    <div style="text-align: center; margin-top: 1rem;">
      <%= link_to "Cancelar", tasks_path, style: "color: var(--text-muted); text-decoration: none;" %>
    </div>
  <% end %>
</div>